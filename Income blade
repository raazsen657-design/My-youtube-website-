    <script>
        // सर्च फॉर्म सबमिट हैंडलर
        document.getElementById('search-form').addEventListener('submit', function(e) {
            e.preventDefault(); // पेज रीलोड ना हो

            const channelName = document.getElementById('channel-search').value.trim();
            if (!channelName) {
                alert('Please enter a channel name or URL');
                return;
            }

            // यहां आप API कॉल या डेटा लोडिंग कर सकते हैं 
            // फिलहाल डेमो के लिए सिमुलेट कर रहा हूँ
            loadChannelData(channelName);
        });

        function loadChannelData(channel) {
            // डेमो डेटा (आप अपने API से रियल डेटा लोड कर सकते हैं)
            document.getElementById('analytics-section').style.display = 'block';
            document.getElementById('channel-thumbnail').src = 'https://via.placeholder.com/80?text=' + encodeURIComponent(channel.charAt(0).toUpperCase());
            document.getElementById('channel-title').textContent = channel;
            document.getElementById('channel-description').textContent = 'यहां चैनल का विवरण दिखेगा।';

            document.getElementById('channel-id').textContent = 'UC' + Math.floor(Math.random() * 1000000000);
            document.getElementById('channel-url').textContent = 'https://youtube.com/' + channel;
            document.getElementById('subscriber-count').textContent = Math.floor(Math.random() * 1000000);
            document.getElementById('video-count').textContent = Math.floor(Math.random() * 500);
            document.getElementById('view-count').textContent = Math.floor(Math.random() * 10000000);
            document.getElementById('channel-created').textContent = '2010-01-01';
            document.getElementById('channel-country').textContent = 'India';
            document.getElementById('channel-status').textContent = 'Active';
            document.getElementById('channel-keywords').textContent = 'Music, Entertainment';
            document.getElementById('monthly-revenue').textContent = `$${(Math.random()*10000).toFixed(2)}`;
            document.getElementById('yearly-revenue').textContent = `$${(Math.random()*120000).toFixed(2)}`;
        }
    </script>
